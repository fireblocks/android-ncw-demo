<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Button">
        <item name="android:fontFamily">@font/figtree_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/selector_action_button</item>
        <item name="android:layout_marginBottom">@dimen/action_button_default_margin</item>
        <item name="android:layout_marginTop">@dimen/action_button_default_margin</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>


    <style name="Button.Dialog">
        <item name="android:textSize">15sp</item>
    </style>


</resources>
